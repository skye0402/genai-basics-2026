# Audio Transcription (either JP or US)
AUDIO_MODEL_INSTANCE=JP

# Main LLM Configuration
LLM_MODEL=gpt-4.1
# Range: 0.0 (deterministic) to 1.0 (creative)
LLM_TEMPERATURE=0.7
# Maximum tokens in response
LLM_MAX_TOKENS=1000

# Summarization LLM Configuration (for title generation)
# Use a faster/cheaper model like gpt-3.5-turbo or gpt-4o-mini
SUMMARIZATION_LLM_MODEL=gpt-3.5-turbo
# More deterministic for consistent titles
SUMMARIZATION_TEMPERATURE=0.3
# Short titles only
SUMMARIZATION_MAX_TOKENS=50

# SAP BW OData
SAP_BW_URL=
SAP_BW_USERNAME=
SAP_BW_PASSWORD=

# SAP HANA Cloud Vector Store Configuration
# Connection settings for HANA Cloud Vector Engine
HANA_DB_ADDRESS=your-hana-instance.hanacloud.ondemand.com
HANA_DB_PORT=443
HANA_DB_USER=your-hana-user
HANA_DB_PASSWORD=s2vQLYXpgZGWED6

# Vector Store Table Configuration
HANA_TABLE=LANGCHAIN_DEMO_DOCS
HANA_DISTANCE_STRATEGY=cosine
# Options: cosine, euclidean

# Embedding Configuration
# Use internal HANA embeddings (true) or external embeddings (false)
HANA_USE_INTERNAL_EMBEDDINGS=true
# Internal embedding model ID (only used when HANA_USE_INTERNAL_EMBEDDINGS=true)
# Requires NLP to be enabled in HANA Cloud instance
HANA_INTERNAL_MODEL_ID=SAP_NEB.20240715

# External embedding model (only used when HANA_USE_INTERNAL_EMBEDDINGS=false)
EXTERNAL_EMBEDDING_MODEL=text-embedding-3-large

# HNSW Index Configuration
# Automatically create HNSW index after document ingestion
HANA_CREATE_HNSW_INDEX=false
# HNSW Index parameters (only used when HANA_CREATE_HNSW_INDEX=true)
HANA_HNSW_M=64
# Max neighbors per graph node (4-1000)
HANA_HNSW_EF_CONSTRUCTION=128
# Max candidates during construction (1-100000)
HANA_HNSW_EF_SEARCH=200
# Min candidates during search (1-100000)

# Document Processing Configuration
# Chunk size for text splitting
CHUNK_SIZE=1000
# Chunk overlap for context continuity
CHUNK_OVERLAP=150

# Metadata Enrichment Configuration
# Enable LLM-based metadata enrichment (summary and keywords)
ENABLE_METADATA_ENRICHMENT=true
# Model for enrichment (uses SUMMARIZATION_LLM_MODEL if not specified)
ENRICHMENT_LLM_MODEL=gpt-3.5-turbo
ENRICHMENT_TEMPERATURE=0.3
ENRICHMENT_MAX_TOKENS=100

# Multi-tenancy Configuration
# Default tenant ID for workshop (can be overridden per request)
DEFAULT_TENANT_ID=workshop-tenant
