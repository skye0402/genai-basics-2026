# Logging configuration
# Valid values: debug, info, warn, error
LOG_LEVEL=info

# Server configuration
PORT=3001

# SAP AI Core Service Key (required for web search via Perplexity)
# Get this from SAP BTP Cockpit -> AI Core Service Instance -> Service Keys
# Format: Single-line JSON string (remove line breaks)
# Example structure shown below - replace with your actual service key
AICORE_SERVICE_KEY='{"clientid":"sb-xxx","clientsecret":"xxx","url":"https://xxx.authentication.xxx.hana.ondemand.com","identityzone":"xxx","identityzoneid":"xxx","appname":"xxx","serviceurls":{"AI_API_URL":"https://api.ai.xxx"}}'

# SAP AI Core Resource Group (optional, defaults to 'default')
SAP_AI_RESOURCE_GROUP=default

# HANA Cloud Vector Store Configuration
HANA_DB_ADDRESS=your-hana-instance.hanacloud.ondemand.com
HANA_DB_PORT=443
HANA_DB_USER=your-username
HANA_DB_PASSWORD=your-password

# Vector Store Table Configuration
HANA_VECTOR_TABLE=LANGCHAIN_DEMO_DOCS
HANA_HEADER_TABLE=LANGCHAIN_DEMO_DOCS_HEADER

# Document Processing Configuration 
CHUNK_SIZE=2000
CHUNK_OVERLAP=200
SUMMARY_INPUT_MAX_PAGES=5
SUMMARY_INPUT_MAX_CHARS=10000

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BATCH_SIZE=10

# Metadata model configuration
METADATA_MODEL=gpt-4.1

# Multi-tenancy Configuration
DEFAULT_TENANT_ID=default-tenant

# OData OAuth Proxy Configuration (for BW Fixed Cost and Contribution Margin services)
#
# These values are used by the MCP tools fixed_cost_query and contribution_margin_query
# to obtain an OAuth access token from XSUAA and call the Fuso OData OAuth Proxy.
#
# TOKEN URL: XSUAA token endpoint for the workshop subaccount.
ODATA_TOKEN_URL=https://your-xsuaa-instance.authentication.example.com/oauth/token

# CLIENT CREDENTIALS: OAuth client id/secret from the XSUAA service key.
ODATA_CLIENT_ID=your-odata-client-id
ODATA_CLIENT_SECRET=your-odata-client-secret

# PROXY BASE URL: Base URL of the deployed Fuso OData OAuth Proxy (without trailing slash).
ODATA_PROXY_BASE_URL=https://fuso-odata-oauth-proxy.example.com

# Optional: Maximum allowed $top value for OData queries.
# If set to 0 or left unset, no cap is applied. If > 0, requested top values are clamped.
ODATA_MAX_TOP=200
